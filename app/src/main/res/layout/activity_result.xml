<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="kid name:"
                    android:layout_weight=".6"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="15dp"/>


                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/kidname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="kidname displayed here"
                    android:layout_weight=".25"/>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UUID:"
                    android:layout_weight=".6"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UUID displayed here"
                    android:id="@+id/uuid"
                    android:layout_weight=".25"/>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="major:"
                    android:layout_weight=".6"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAllCaps="true"/>

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="major displayed here"
                    android:id="@+id/major"
                    android:layout_weight=".25"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="minor:"
                    android:layout_weight=".6"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="minor displayed here"
                    android:id="@+id/minor"
                    android:layout_weight=".25"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="age:"
                    android:layout_weight=".6"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="kid age displayed here"
                    android:id="@+id/age"
                    android:layout_weight=".25"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop Tracking"
                    android:background="@color/buttonbg"
                    android:textColor="@color/colorbutton"
                    android:id="@+id/stopbutton"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:textColorHint="@color/white2"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance details appear here"
                android:id="@+id/dist"/>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColorHint="@color/white2"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/inout"
                android:text="in or out will be displayed here"
                android:textAlignment="center"
                android:layout_weight=".25"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="last outrange time:  "
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/time"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>